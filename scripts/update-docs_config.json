{
    "version": 2,
    "defaults": {
        "skipUnchanged": true,
        "failOnMissingSource": true,
        "cssFiles": [
            "brand/fonts/fonts.css"
        ],
        "headless": {
            "primary": {
                "name": "edge",
                "path": {
                    "windows": "C:/Program Files (x86)/Microsoft/Edge/Application/msedge.exe",
                    "linux": "/usr/bin/microsoft-edge",
                    "darwin": "/Applications/Microsoft Edge.app/Contents/MacOS/Microsoft Edge"
                }
            },
            "fallback": {
                "name": "chrome",
                "path": {
                    "windows": "C:/Program Files/Google/Chrome/Application/chrome.exe",
                    "linux": "/usr/bin/google-chrome",
                    "darwin": "/Applications/Google Chrome.app/Contents/MacOS/Google Chrome"
                }
            }
        }
    },
    "actions": [
        {
            "action": "copy",
            "source": "RELEASE_NOTES.md",
            "targets": [
                {
                    "type": "md",
                    "destination": "docs/FaceForge - Dev Guide - Release Notes.md"
                }
            ]
        },
        {
            "action": "copy",
            "source": "README.md",
            "targets": [
                {
                    "type": "md",
                    "destination": "docs/FaceForge - Readme.md"
                }
            ]
        },
        {
            "action": "transform",
            "transform": "scriptsReadme",
            "source": "scripts/*.ps1",
            "targets": [
                {
                    "type": "md",
                    "destination": "docs/FaceForge - Dev Guide - Scripts.md"
                }
            ]
        },
        {
            "action": "transform",
            "transform": "markdownToHtml",
            "source": "docs/FaceForge - Dev Guide - Release Notes.md",
            "targets": [
                {
                    "type": "html",
                    "destination": "docs/FaceForge - Dev Guide - Release Notes.html"
                }
            ]
        },
        {
            "action": "print",
            "source": "docs/FaceForge - Dev Guide - Release Notes.html",
            "targets": [
                {
                    "type": "pdf",
                    "destination": "docs/FaceForge - Dev Guide - Release Notes.pdf"
                }
            ]
        },
        {
            "action": "transform",
            "transform": "markdownToHtml",
            "source": "docs/FaceForge - Readme.md",
            "targets": [
                {
                    "type": "html",
                    "destination": "docs/FaceForge - Readme.html"
                }
            ]
        },
        {
            "action": "print",
            "source": "docs/FaceForge - Readme.html",
            "targets": [
                {
                    "type": "pdf",
                    "destination": "docs/FaceForge - Readme.pdf"
                }
            ]
        },
        {
            "action": "transform",
            "transform": "markdownToHtml",
            "source": "docs/FaceForge - Dev Guide - Scripts.md",
            "targets": [
