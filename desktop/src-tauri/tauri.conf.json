{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "FaceForge",
  "version": "0.1.9",
  "identifier": "com.faceforge.desktop",
  "build": {
    "frontendDist": "../ui",
    "devUrl": null
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "FaceForge",
        "width": 980,
        "height": 720,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["../../brand/favicon/favicon.ico"],
    "resources": ["resources/**/*"],
    "externalBin": ["binaries/faceforge-core"]
  }
}
